<android.support.design.widget.PullToZoomContainer
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main_content"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true">

  <android.support.design.widget.PullToZoomCoreChild
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/backdrop"
      android:layout_width="match_parent"
      android:layout_height="500dp"
      android:fitsSystemWindows="true"
      android:scaleType="centerCrop"
      app:actionWhenOverScroll="scale"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Info"
      android:textAppearance="@style/TextAppearance.AppCompat.Title"
      app:actionWhenOverScroll="translation"/>

    <com.lsjwzh.widget.multirvcontainer.CoordinateScrollRecyclerView
      android:id="@+id/recyclerview"

      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/backdrop"
      android:background="@color/cardview_dark_background"
      app:actionWhenOverScroll="translation"/>
  </android.support.design.widget.PullToZoomCoreChild>

</android.support.design.widget.PullToZoomContainer>